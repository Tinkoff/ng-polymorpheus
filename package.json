{
    "name": "ng-polymorpheus",
    "version": "4.7.1",
    "private": true,
    "description": "This is a small library for customizing components appearance",
    "keywords": [
        "angular",
        "ng",
        "template",
        "polymorph",
        "component",
        "function",
        "context",
        "ng-template",
        "TemplateRef",
        "ngTemplateOutlet",
        "ngComponentOutlet"
    ],
    "homepage": "https://github.com/taiga-family/ng-polymorpheus#README",
    "bugs": "https://github.com/taiga-family/ng-polymorpheus/issues",
    "repository": "https://github.com/taiga-family/ng-polymorpheus",
    "license": "Apache-2.0",
    "author": {
        "name": "Alex Inkin",
        "email": "alexander@inkin.ru"
    },
    "contributors": [
        "Roman Sedov <79601794011@ya.ru> (http://marsibarsi.me/)"
    ],
    "workspaces": [
        "projects/*"
    ],
    "scripts": {
        "prepare": "husky",
        "start": "nx serve demo",
        "dev:ssr": "nx run demo:serve-ssr",
        "build:ssr": "nx build --prod && nx run demo:server:production",
        "prerender": "nx run demo:prerender",
        "build": "nx build demo",
        "stylelint": "stylelint '**/*.{less,css}'",
        "prettier": "prettier !package-lock.json !CHANGELOG.md .  --ignore-path .gitignore",
        "test": "nx test ng-polymorpheus",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit --skipLibCheck"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ],
        "rules": {
            "@angular-eslint/no-conflicting-lifecycle": "off"
        },
        "root": true
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ]
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "16.2.15",
        "@angular-devkit/core": "16.2.15",
        "@angular/animations": "16.2.12",
        "@angular/cli": "16.2.15",
        "@angular/common": "16.2.12",
        "@angular/compiler": "16.2.12",
        "@angular/compiler-cli": "16.2.12",
        "@angular/core": "16.2.12",
        "@angular/forms": "16.2.12",
        "@angular/language-service": "16.2.12",
        "@angular/platform-browser": "16.2.12",
        "@angular/platform-browser-dynamic": "16.2.12",
        "@angular/platform-server": "16.2.12",
        "@angular/router": "16.2.12",
        "@commitlint/cli": "19.5.0",
        "@commitlint/config-conventional": "19.5.0",
        "@ng-web-apis/common": "4.5.0",
        "@ng-web-apis/universal": "4.5.0",
        "@nx/angular": "19.7.3",
        "@nx/jest": "19.7.3",
        "@nx/node": "19.7.3",
        "@nx/workspace": "19.7.3",
        "@release-it-plugins/workspaces": "4.2.0",
        "@release-it/conventional-changelog": "8.0.2",
        "@swc/helpers": "0.5.13",
        "@taiga-ui/browserslist-config": "0.181.0",
        "@taiga-ui/commitlint-config": "0.181.0",
        "@taiga-ui/dompurify": "4.1.7",
        "@taiga-ui/eslint-plugin-experience": "0.181.0",
        "@taiga-ui/prettier-config": "0.181.0",
        "@taiga-ui/stylelint-config": "0.181.0",
        "@taiga-ui/tsconfig": "0.181.0",
        "@types/estree": "1.0.5",
        "@types/express": "4.17.21",
        "@types/jest": "29.5.13",
        "@types/node": "22.5.5",
        "express": "4.21.0",
        "highlight.js": "11.10.0",
        "husky": "9.1.6",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-preset-angular": "14.2.4",
        "lint-staged": "15.2.10",
        "ng-packagr": "16.2.3",
        "ngx-highlightjs": "10.0.0",
        "nx": "19.7.3",
        "release-it": "17.6.0",
        "rxjs": "7.8.1",
        "ts-jest": "29.2.5",
        "ts-node": "10.9.2",
        "tslib": "2.7.0",
        "typescript": "5.0.4",
        "webpack": "5.94.0"
    },
    "engines": {
        "node": ">= 18",
        "npm": ">= 9",
        "yarn": "Please use npm instead of yarn to install dependencies"
    },
    "schematics": "./schematics/collection.json"
}
